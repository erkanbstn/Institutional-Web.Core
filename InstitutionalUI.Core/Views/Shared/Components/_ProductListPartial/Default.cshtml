@model List<Product>

<div class="tab-pane fade show active" id="v-pills-1" role="tabpanel" aria-labelledby="day-1-tab">
    <div class="row no-gutters d-flex align-items-stretch">
        @foreach (var Product in Model)
        {
            @if (Product.Title == "Bayan")
            {
                <div class="col-md-12 col-lg-6 d-flex align-self-stretch">
                    <div class="menus d-sm-flex ftco-animate align-items-stretch">

                        <div class="menu-img img" style="background-image: url(/Images/@Product.Image);"></div>
                        <div class="text d-flex align-items-center">
                            <div>
                                <div class="d-flex">
                                    <div class="one-half">
                                        <h3>@Product.Title</h3>
                                    </div>
                                </div>
                                <p><span>@Product.Content</span></p>
                                <span style="color: forestgreen;">@Product.Detail</span>
                                <span style="color: orangered;">@Product.Detail2</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

