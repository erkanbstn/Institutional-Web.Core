@model ManagerEditDto
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Profilim</h1>
<br />
<div class="row">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" class="form-control" asp-for="Id"/>
        <span>Kullanıcı Adı</span>
        <input type="text" class="form-control" asp-for="UserName" readonly/>
        <span>Parola</span>
        <input type="text" class="form-control" asp-for="Password" placeholder="Parolanızı Giriniz" />
        <br />
        <input type="submit" class="btn btn-info" value="Değişiklikleri Kaydet" />
    </form>
</div>
<br />
@if (ViewBag.success != null)
{
    <div class="alert alert-success">
        @ViewBag.success
    </div>
}
