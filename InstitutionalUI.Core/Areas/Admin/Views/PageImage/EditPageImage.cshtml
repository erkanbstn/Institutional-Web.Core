@model PageImageEditDto
@{
    ViewData["Title"] = "EditPageImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Sayfa Arkaplanı Düzenle</h1>
<br />
<div class="row">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" class="form-control" asp-for="Id" />
        <span>Görüntüleme Tipi <b>(Hangi Sayfada Görüntüleneceğini Seçiniz)</b></span>
        <select asp-for="ShowType" class="form-control">
            <option value="">Görüntüleme Tipi Seçiniz</option>
            <option value="İletişim">İletişim</option>
            <option value="Hakkımızda">Hakkımızda</option>
            <option value="Ürünler">Ürünler</option>
        </select>
        <br />
        <span>Görsel</span>
        <input type="file" class="form-control" asp-for="Picture" placeholder="Dosya Seçiniz" />
        <br />
        <input type="submit" class="btn btn-info" value="Değişiklikleri Kaydet" />
    </form>
</div>
